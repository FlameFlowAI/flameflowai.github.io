each value, label in theme.menu
  if !Array.isArray(value)
    .menus_item
      if(page.lang === 'zh-CN')
         a.site-page(href='/cn'+trim(value.split('||')[0]))
            i.fa-fw(class=trim(value.split('||')[1]))
            span=' '+_p('menu.'+label)
      else
         a.site-page(href=trim(value.split('||')[0]))
             i.fa-fw(class=trim(value.split('||')[1]))
             span=' '+_p('menu.'+label)
  else
    .menus_item
      a.site-page
          i.fa-fw(class=trim(label.split('||')[1]) aria-hidden="true")
          span=' '+ _p('menu.' + trim(label.split('||')[0]))
          i.fa.fa-chevron-down.menus-expand(aria-hidden="true")
      ul.menus_item_child
        each i in value
          li
            a.site-page(href=trim(i.split('||')[1]))
              span=' '+trim(i.split('||')[0])